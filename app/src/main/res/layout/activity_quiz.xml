<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EBE6E6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"

        >

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.75"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_media_previous"
            android:contentDescription="Back Button"
            android:onClick="onBackPressed"
            android:id="@+id/btnprev"/>

        <TextView
            android:layout_marginTop="12dp"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:text="7/10"
            android:textColor="@color/black"
            android:id="@+id/tvcount"
            android:textSize="22dp">
        </TextView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:background="@drawable/radio_button_bg"
        android:buttonTint="@android:color/transparent"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question"
            android:textAlignment="center"
            android:background="@color/white"
            android:textColor="@color/black"
            android:id="@+id/tvquestion"
            android:textSize="22dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:elevation="6dp"
        android:backgroundTint="@color/white">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/rbopt1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Option 1"
                android:background="@drawable/radio_button_bg"
                android:buttonTint="@android:color/transparent"
                android:gravity="center"
                android:textColor="@color/black"/>

            <RadioButton
                android:id="@+id/rbopt2"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Option 2"
                android:background="@drawable/radio_button_bg"
                android:buttonTint="@android:color/transparent"
                android:gravity="center"
                android:textColor="@color/black"/>

            <RadioButton
                android:id="@+id/rbopt3"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Option 3"
                android:background="@drawable/radio_button_bg"
                android:buttonTint="@android:color/transparent"
                android:gravity="center"
                android:textColor="@color/black"/>

            <RadioButton
                android:id="@+id/rbopt4"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/radio_button_bg"
                android:buttonTint="@android:color/transparent"
                android:gravity="center"
                android:text="Option 4"
                android:textColor="@color/black" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                />
        </RadioGroup>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_margin="20dp"
        android:orientation="vertical"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:text="Next"
            android:textSize="28sp"
            android:backgroundTint="#034407"
            android:id="@+id/btnNext"/>



    </LinearLayout>


</LinearLayout>
